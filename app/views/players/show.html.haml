.container-fluid
  .panel.panel-default
    .panel-heading
      %h3.panel-title
      = "#{@player.first_name} #{@player.last_name}"
    .panel-body
      %p#notice= notice

      %p
        %b First Name:
        = @player.first_name
      %p
        %b Last Name:
        = @player.last_name
      %p
        %b Nickname:
        = @player.nickname
      %p
        %b Home Town:
        = @player.home_town
      %p
        %b College:
        = @player.college
      %p
        %b Number:
        = @player.number
      %p
        %b Favorite Beer:
        = @player.favorite_beer

    .panel-footer
      = link_to 'Edit', edit_player_path(@player)
      \|
      = link_to 'Back', players_path
