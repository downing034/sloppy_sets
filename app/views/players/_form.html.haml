= form_for @player, :html => { :multipart => true } do |f|
  - if @player.errors.any?
    #error_explanation
      %h2= "#{pluralize(@player.errors.count, "error")} prohibited this player from being saved:"
      %ul
        - @player.errors.full_messages.each do |msg|
          %li= msg

  .field.form-group
    = f.label :first_name, 'First Name'
    = f.text_field :first_name, class: 'form-control'
  .field.form-group
    = f.label :last_name, 'Last Name'
    = f.text_field :last_name, class: 'form-control'
  .field.form-group
    = f.label :nickname, 'Nickname'
    = f.text_field :nickname, class: 'form-control'
  .field.form-group
    = f.label :home_town, 'Home Town'
    = f.text_field :home_town, class: 'form-control'
  .field.form-group
    = f.label :college, 'College'
    = f.text_field :college, class: 'form-control'
  .field.form-group
    = f.label :number, 'Number'
    = f.number_field :number, class: 'form-control'
  .field.form-group
    = f.label :favorite_beer, 'Favorite Beer'
    = f.text_field :favorite_beer, class: 'form-control'
  .field.form-group
    = f.label :vb_iq, 'Volleyball IQ (Max: 161)'
    = f.text_field :vb_iq, class: 'form-control'
  .field.form-group
    = f.label :avatar, 'Your Photo'
    = f.file_field :avatar, class: 'form-control'
  .actions.form-group
    = f.submit 'Save', class: 'btn btn-primary'
