= form_for @player do |f|
  - if @player.errors.any?
    #error_explanation
      %h2= "#{pluralize(@player.errors.count, "error")} prohibited this player from being saved:"
      %ul
        - @player.errors.full_messages.each do |msg|
          %li= msg

  .field.form-group
    = f.label :first_name
    = f.text_field :first_name, class: 'form-control'
  .field.form-group
    = f.label :last_name
    = f.text_field :last_name, class: 'form-control'
  .field.form-group
    = f.label :nickname
    = f.text_field :nickname, class: 'form-control'
  .field.form-group
    = f.label :home_town
    = f.text_field :home_town, class: 'form-control'
  .field.form-group
    = f.label :college
    = f.text_field :college, class: 'form-control'
  .field.form-group
    = f.label :number
    = f.number_field :number, class: 'form-control'
  .field.form-group
    = f.label :favorite_beer
    = f.text_field :favorite_beer, class: 'form-control'
  .actions.form-group
    = f.submit 'Save', class: 'btn btn-primary'
