.container-fluid
  .panel.panel-default
    .panel-heading
      %h3.panel-title Players
    .panel-body
      %table.table.table-responsive.table-hover
        %thead
          %tr
            %th First name
            %th Last name
            %th Home town
            %th College
            %th Number
            %th Favorite beer
            %th
            %th
            %th

        %tbody
          - @players.each do |player|
            %tr
              %td= player.first_name
              %td= player.last_name
              %td= player.home_town
              %td= player.college
              %td= player.number
              %td= player.favorite_beer
              %td= link_to 'Show', player
              %td= link_to 'Edit', edit_player_path(player)
              %td= link_to 'Destroy', player, :method => :delete, :data => { :confirm => 'Are you sure?' }

      %br
      .panel-footer
        = link_to 'New Player', new_player_path



.container-fluid
  = @players.each do |player|
    .span3.well
      %center
        %a{"data-target" => "#modal-#{player.id}", "data-toggle" => "modal", :href => "#aboutModal"}
          %img.img-circle{:height => "140", :name => "aboutme", :src => "https://encrypted-tbn2.gstatic.com/images?q=tbn:ANd9GcRbezqZpEuwGSvitKy3wrwnth5kysKdRqBW54cAszm_wiutku3R", :width => "140"}/
        %h3
          = full_display_name(player)
        %em click my face for more
    / Modal
    .modal.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", :id => "modal-#{player.id}", :role => "dialog", :tabindex => "-1"}
      .modal-dialog
        .modal-content
          .modal-header
            %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"}
            %h4#myModalLabel.modal-title
              = "More about #{player.first_name}"
          .modal-body
            %center
              %img.img-circle{:border => "0", :height => "140", :name => "aboutme", :src => "https://encrypted-tbn2.gstatic.com/images?q=tbn:ANd9GcRbezqZpEuwGSvitKy3wrwnth5kysKdRqBW54cAszm_wiutku3R", :width => "140"}/
              %h3.media-heading
                = full_display_name(player)
                %small
                  = player.home_town.upcase
              %span
                %strong Number :
              %span.label.label-info
                = player.number
            %hr/
            %center
              %p.text-center
                %strong Nickname:
                %br/
                = player.nickname
            %hr/
            %center
              %p.text-center
                %strong College:
                %br/
                = player.college
            %hr/
            %center
              %p.text-center
                %strong Favorite Beer:
                %br/
                = player.favorite_beer
          .modal-footer
            %center
              %button.btn.btn-warning{"data-dismiss" => "modal", :type => "button"}
                = "I've heard enough about #{player.nickname}"
